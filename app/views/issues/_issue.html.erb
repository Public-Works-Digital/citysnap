<div id="<%= dom_id issue %>" class="bg-white rounded-lg shadow-lg overflow-hidden">
  <!-- Photo Section -->
  <% if issue.photo.attached? %>
    <div class="relative" style="max-height: 500px; overflow: hidden;">
      <%= image_tag issue.photo.variant(resize_to_limit: [800, 600]), class: "w-full h-auto object-contain bg-gray-100" %>
    </div>
  <% else %>
    <div class="bg-gradient-to-br from-gray-200 to-gray-300 h-64 flex items-center justify-center">
      <div class="text-center">
        <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="mt-2 text-gray-500">No photo provided</p>
      </div>
    </div>
  <% end %>

  <!-- Content Section -->
  <div class="p-6 space-y-6">
    <!-- Description -->
    <div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Issue Description</h3>
      <p class="text-gray-700 leading-relaxed">
        <%= issue.comment.presence || "No description provided for this issue." %>
      </p>
    </div>

    <!-- Metadata -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 py-4 border-t border-b border-gray-200">
      <div>
        <p class="text-sm font-medium text-gray-500">Reported By</p>
        <p class="mt-1 text-sm text-gray-900"><%= issue.user.email %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Date Reported</p>
        <p class="mt-1 text-sm text-gray-900"><%= issue.created_at.strftime("%B %d, %Y at %l:%M %p") %></p>
      </div>
      <% if issue.updated_at != issue.created_at %>
        <div>
          <p class="text-sm font-medium text-gray-500">Last Updated</p>
          <p class="mt-1 text-sm text-gray-900"><%= issue.updated_at.strftime("%B %d, %Y at %l:%M %p") %></p>
        </div>
      <% end %>
      <div>
        <p class="text-sm font-medium text-gray-500">Issue ID</p>
        <p class="mt-1 text-sm text-gray-900 font-mono">#<%= issue.id.to_s.rjust(6, '0') %></p>
      </div>
    </div>

    <!-- Location Section -->
    <% if issue.has_location? %>
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-4">Location Details</h3>

        <div class="bg-gray-50 rounded-lg p-4 mb-4">
          <div class="flex items-start space-x-3">
            <svg class="h-5 w-5 text-red-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= issue.street_address %></p>
              <p class="text-sm text-gray-600 mt-1">GPS Coordinates: <%= issue.formatted_coordinates %></p>
            </div>
          </div>
        </div>

        <div data-controller="map"
             data-map-latitude-value="<%= issue.latitude %>"
             data-map-longitude-value="<%= issue.longitude %>"
             data-map-address-value="<%= issue.street_address %>"
             data-map-editable-value="false"
             class="map-view-container">
          <div data-map-target="container" class="w-full rounded-lg border-2 border-gray-200 overflow-hidden"></div>
        </div>
      </div>
    <% else %>
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <p class="mt-2 text-sm text-gray-500">No location information provided for this issue</p>
      </div>
    <% end %>
  </div>
</div>