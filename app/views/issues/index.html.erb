<% content_for :title, "My Issues" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">My Reported Issues</h1>
          <p class="mt-2 text-sm text-gray-600">Track and manage all your city issue reports</p>
        </div>
        <div class="mt-4 sm:mt-0 flex items-center gap-3">
          <!-- Filter Dropdown -->
          <div class="relative" data-controller="filter" data-action="click@window->filter#close">
            <button type="button"
                    data-action="click->filter#toggle"
                    class="inline-flex items-center px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out">
              <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
              </svg>
              Filter
            </button>

            <!-- Dropdown Menu -->
            <div data-filter-target="menu" class="hidden absolute right-0 mt-2 w-72 rounded-lg shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
              <div class="p-4">
                <%= form_with url: issues_path, method: :get, local: true, class: "space-y-4" do |form| %>
                  <!-- Status Filter -->
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <div class="space-y-2">
                      <label class="flex items-center">
                        <%= radio_button_tag :status, "", params[:status].blank?, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                        <span class="ml-2 text-sm text-gray-700">All</span>
                      </label>
                      <label class="flex items-center">
                        <%= radio_button_tag :status, "received", params[:status] == "received", class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                        <span class="ml-2 text-sm text-gray-700">Received</span>
                      </label>
                      <label class="flex items-center">
                        <%= radio_button_tag :status, "assigned", params[:status] == "assigned", class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                        <span class="ml-2 text-sm text-gray-700">Assigned</span>
                      </label>
                      <label class="flex items-center">
                        <%= radio_button_tag :status, "closed", params[:status] == "closed", class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                        <span class="ml-2 text-sm text-gray-700">Closed</span>
                      </label>
                    </div>
                  </div>

                  <!-- Category Filter -->
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                    <%= form.select :category_id,
                        options_from_collection_for_select(
                          Category.active.leaf_nodes.ordered,
                          :id,
                          :full_name,
                          params[:category_id]
                        ),
                        { include_blank: "All Categories" },
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 text-sm" %>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2 pt-2">
                    <%= form.submit "Apply", class: "flex-1 bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
                    <%= link_to "Clear", issues_path, class: "flex-1 bg-white text-gray-700 px-4 py-2 rounded-lg text-sm font-medium border border-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 text-center" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <%= link_to new_issue_path, class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out" do %>
            <svg class="-ml-1 mr-3" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Report New Issue
          <% end %>
        </div>
      </div>
    </div>

    <% if @issues.any? %>
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow px-6 py-4">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-red-100 rounded-lg p-3">
              <svg class="text-red-600" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm text-gray-500">Total Reports</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @issues.count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow px-6 py-4">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-green-100 rounded-lg p-3">
              <svg class="text-green-600" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm text-gray-500">With Location</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @issues.select(&:has_location?).count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow px-6 py-4">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-blue-100 rounded-lg p-3">
              <svg class="text-blue-600" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm text-gray-500">With Photos</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @issues.select { |i| i.photo.attached? }.count %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Issues Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @issues.each do |issue| %>
          <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
            <!-- Image or Placeholder -->
            <% if issue.photo.attached? %>
              <div class="relative h-48 bg-gray-200">
                <%= image_tag issue.photo.variant(resize_to_limit: [400, 300]), class: "w-full h-full object-cover" %>
              </div>
            <% else %>
              <div class="relative h-48 bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center">
                <svg class="text-gray-500" width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            <% end %>

            <!-- Content -->
            <div class="p-6">
              <!-- Issue ID Badge & Status -->
              <div class="flex items-center justify-between mb-3">
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    #<%= issue.id.to_s.rjust(6, '0') %>
                  </span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= issue.status_badge_color %>">
                    <%= issue.status.titleize %>
                  </span>
                </div>
                <% if issue.photo.attached? %>
                  <span class="inline-flex items-center text-xs text-gray-500">
                    <svg class="mr-1" width="14" height="14" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                    Photo
                  </span>
                <% end %>
              </div>

              <!-- Category -->
              <% if issue.category %>
                <p class="text-xs text-gray-600 mb-2">
                  <span class="font-medium"><%= issue.category.name %></span>
                </p>
              <% end %>

              <!-- Comment -->
              <p class="text-gray-800 font-medium mb-3 line-clamp-2 min-h-[3rem]">
                <%= issue.comment.presence || "No description provided" %>
              </p>

              <!-- Location Info -->
              <% if issue.has_location? %>
                <div class="flex items-start text-sm text-gray-600 mb-3">
                  <svg class="text-gray-400 mr-1.5 mt-0.5 flex-shrink-0" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="truncate flex-1" title="<%= issue.street_address %>"><%= issue.street_address %></span>
                </div>
              <% else %>
                <div class="flex items-center text-sm text-gray-400 mb-3">
                  <svg class="mr-1.5" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span>No location specified</span>
                </div>
              <% end %>

              <!-- Date -->
              <div class="flex items-center text-sm text-gray-500 mb-4">
                <svg class="text-gray-400 mr-1" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>Reported <%= issue.created_at.strftime("%B %d, %Y") %></span>
              </div>

              <!-- Actions -->
              <div class="flex space-x-2">
                <%= link_to "View", issue, class: "flex-1 text-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition duration-150 ease-in-out" %>
                <%= link_to "Edit", edit_issue_path(issue), class: "flex-1 text-center px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 rounded-lg font-medium transition duration-150 ease-in-out" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg shadow-sm px-6 py-16 text-center">
        <svg class="mx-auto text-gray-400" width="96" height="96" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">No issues reported yet</h3>
        <p class="mt-2 text-sm text-gray-500">Get started by reporting your first city issue.</p>
        <%= link_to "Report Your First Issue", new_issue_path, class: "mt-6 inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>