<% content_for :title, "Public Issues" %>

<div class="fixed inset-0 top-16 bottom-[88px] flex flex-col" data-controller="issues-map">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200 px-4 sm:px-6 lg:px-8 py-4 flex-shrink-0">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">All Reported Issues</h1>
        <p class="mt-1 text-sm text-gray-600">
          <span data-issues-map-target="count"><%= @pagy.count %></span> issues reported by the community
        </p>
      </div>
      <div class="flex items-center gap-3">
        <!-- Filter Dropdown -->
        <div class="relative" data-controller="filter" data-action="click@window->filter#close">
          <button type="button"
                  data-action="click->filter#toggle"
                  class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out">
            <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
            Filter
          </button>

          <!-- Dropdown Menu -->
          <div data-filter-target="menu" class="hidden absolute right-0 mt-2 w-72 rounded-lg shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
            <div class="p-4">
              <%= form_with url: public_issues_path, method: :get, local: true, class: "space-y-4" do |form| %>
                <!-- Status Filter -->
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                  <div class="space-y-2">
                    <label class="flex items-center">
                      <%= radio_button_tag :status, "", params[:status].blank?, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                      <span class="ml-2 text-sm text-gray-700">All</span>
                    </label>
                    <label class="flex items-center">
                      <%= radio_button_tag :status, "received", params[:status] == "received", class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                      <span class="ml-2 text-sm text-gray-700">Received</span>
                    </label>
                    <label class="flex items-center">
                      <%= radio_button_tag :status, "assigned", params[:status] == "assigned", class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                      <span class="ml-2 text-sm text-gray-700">Assigned</span>
                    </label>
                    <label class="flex items-center">
                      <%= radio_button_tag :status, "closed", params[:status] == "closed", class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" %>
                      <span class="ml-2 text-sm text-gray-700">Closed</span>
                    </label>
                  </div>
                </div>

                <!-- Category Filter -->
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                  <%= form.select :category_id,
                      options_from_collection_for_select(
                        Category.active.leaf_nodes.ordered,
                        :id,
                        :full_name,
                        params[:category_id]
                      ),
                      { include_blank: "All Categories" },
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 text-sm" %>
                </div>

                <!-- Actions -->
                <div class="flex gap-2 pt-2">
                  <%= form.submit "Apply", class: "flex-1 bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
                  <%= link_to "Clear", public_issues_path, class: "flex-1 bg-white text-gray-700 px-4 py-2 rounded-lg text-sm font-medium border border-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 text-center" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <%= link_to new_issue_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out" do %>
          <svg class="-ml-1 mr-2" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Report Issue
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content: Map + Sidebar -->
  <div class="flex-1 flex flex-col md:flex-row overflow-hidden min-h-0">
    <!-- Map -->
    <div class="flex-1 relative min-h-0 flex flex-col">
      <div data-issues-map-target="container" class="w-full h-full flex-1"></div>
    </div>

    <!-- Sidebar -->
    <div class="w-full md:w-96 bg-white border-t md:border-t-0 md:border-l border-gray-200 flex flex-col min-h-0">
      <!-- Sidebar Header -->
      <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
        <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wide">Recent Issues</h2>
      </div>

      <!-- Issues List with Infinite Scroll -->
      <div class="flex-1 overflow-y-auto" data-issues-map-target="sidebar" data-action="scroll->issues-map#handleScroll">
        <div id="issues-list">
          <%= render partial: "issues/public_issue_card", collection: @issues, as: :issue %>
        </div>

        <!-- Loading indicator -->
        <div class="p-4 text-center hidden" data-issues-map-target="loader">
          <svg class="animate-spin h-6 w-6 mx-auto text-red-600" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <p class="mt-2 text-sm text-gray-500">Loading more issues...</p>
        </div>

        <!-- Pagination anchor for infinite scroll -->
        <div id="pagination-anchor"
             data-next-page="<%= @pagy.next ? @pagy.next : '' %>"
             data-has-more="<%= @pagy.next.present? %>">
        </div>
      </div>
    </div>
  </div>
</div>
