<%= form_with(model: issue, class: "space-y-6") do |form| %>
  <% if issue.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There <%= issue.errors.count == 1 ? "was" : "were" %> <%= pluralize(issue.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% issue.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Photo Upload Section -->
  <div class="bg-white rounded-lg shadow px-6 py-5" data-controller="file-upload">
    <div>
      <%= form.label :photo, class: "block text-sm font-medium text-gray-700 mb-2" do %>
        <span>Photo of the Issue</span>
        <span class="text-gray-500 font-normal">(optional but recommended)</span>
      <% end %>

      <% if issue.photo.attached? %>
        <div class="mb-4">
          <p class="text-sm text-gray-600 mb-2">Current photo:</p>
          <%= image_tag issue.photo.variant(resize_to_limit: [400, 300]), class: "rounded-lg shadow-sm border border-gray-200" %>
        </div>
      <% end %>

      <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-gray-400 transition-colors">
        <div class="space-y-1 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <div class="flex text-sm text-gray-600">
            <%= form.file_field :photo, class: "sr-only", id: "photo-upload", data: { file_upload_target: "input", action: "change->file-upload#updatePreview" } %>
            <label for="photo-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-red-600 hover:text-red-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-red-500">
              <span>Upload a file</span>
            </label>
            <p class="pl-1">or drag and drop</p>
          </div>
          <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
        </div>
      </div>

      <!-- File Preview -->
      <div class="mt-3 hidden" data-file-upload-target="preview"></div>
    </div>
  </div>

  <!-- Description Section -->
  <div class="bg-white rounded-lg shadow px-6 py-5">
    <div>
      <%= form.label :comment, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <p class="text-sm text-gray-500 mb-2">Describe the issue in detail. What needs to be fixed?</p>
      <%= form.text_area :comment,
          rows: 4,
          placeholder: "e.g., Large pothole on the northbound lane causing traffic to swerve. Approximately 2 feet wide and 6 inches deep.",
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500" %>
    </div>
  </div>

  <!-- Location Section -->
  <div class="bg-white rounded-lg shadow px-6 py-5">
    <div>
      <%= form.label :location, "Issue Location", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <p class="text-sm text-gray-500 mb-4">
        <svg class="inline-block h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Click on the map or drag the pin to set the exact location
      </p>

      <div data-controller="map"
           data-map-latitude-value="<%= issue.latitude %>"
           data-map-longitude-value="<%= issue.longitude %>"
           data-map-address-value="<%= issue.street_address %>"
           data-map-editable-value="true"
           class="relative">
        <div data-map-target="container" class="w-full rounded-lg border-2 border-gray-300 overflow-hidden"></div>

        <%= form.hidden_field :latitude, data: { map_target: "latitude" } %>
        <%= form.hidden_field :longitude, data: { map_target: "longitude" } %>
        <%= form.hidden_field :street_address, data: { map_target: "address" } %>
      </div>

      <% if issue.errors[:latitude].any? || issue.errors[:longitude].any? || issue.errors[:street_address].any? %>
        <p class="mt-2 text-sm text-red-600">Please select a location on the map</p>
      <% end %>

      <div class="mt-4 p-3 bg-blue-50 rounded-lg">
        <p class="text-sm text-blue-800">
          <svg class="inline-block h-4 w-4 text-blue-600 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <strong>Tip:</strong> The map will automatically center on your current location if you allow location access.
        </p>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex items-center justify-between pt-6">
    <% if issue.persisted? %>
      <%= link_to "Cancel", issue_path(issue), class: "text-gray-700 hover:text-gray-900 font-medium" %>
    <% else %>
      <%= link_to "Cancel", issues_path, class: "text-gray-700 hover:text-gray-900 font-medium" %>
    <% end %>

    <div class="flex space-x-3">
      <% if issue.persisted? %>
        <%= link_to "Delete", issue_path(issue),
            method: :delete,
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this issue?" },
            class: "px-6 py-3 border border-red-300 rounded-lg text-red-700 hover:bg-red-50 font-medium transition duration-150 ease-in-out" %>
      <% end %>

      <%= form.submit issue.persisted? ? "Update Issue" : "Report Issue",
          class: "px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out cursor-pointer" %>
    </div>
  </div>
<% end %>