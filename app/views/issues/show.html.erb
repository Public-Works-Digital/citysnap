<% content_for :title, "Issue Details" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header with Breadcrumb -->
    <div class="mb-8">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <%= link_to issues_path, class: "text-gray-400 hover:text-gray-500" do %>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
              </svg>
            <% end %>
          </li>
          <li class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <%= link_to "My Issues", issues_path, class: "ml-2 text-sm font-medium text-gray-500 hover:text-gray-700" %>
          </li>
          <li class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="ml-2 text-sm font-medium text-gray-500">Issue #<%= @issue.id.to_s.rjust(6, '0') %></span>
          </li>
        </ol>
      </nav>

      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <h1 class="text-3xl font-bold text-gray-900">Issue Report Details</h1>

        <!-- Action Buttons -->
        <% if user_signed_in? && can_edit_issue?(@issue) %>
          <div class="mt-4 sm:mt-0 flex space-x-3">
            <%= link_to edit_issue_path(@issue), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <% if current_user.officer_user_type? %>
                Update Issue
              <% else %>
                Edit Issue
              <% end %>
            <% end %>

            <% if @issue.user_id == current_user.id %>
              <%= button_to @issue,
                  method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete this issue? This action cannot be undone." },
                  class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-lg shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete Issue
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Issue Content -->
    <%= render @issue %>

    <!-- Comments Section -->
    <div class="mt-8">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">
            Comments
            <span class="ml-2 text-sm font-normal text-gray-500">(<%= @issue.comments.count %>)</span>
          </h3>
        </div>

        <div class="px-6 py-4">
          <!-- Comments List -->
          <% if @issue.comments.any? %>
            <div class="space-y-4 mb-6">
              <% @issue.comments.ordered.each do |comment| %>
                <div class="flex space-x-3 p-4 bg-gray-50 rounded-lg">
                  <!-- User Icon -->
                  <div class="flex-shrink-0">
                    <% if comment.user.officer_user_type? %>
                      <!-- Officer Badge -->
                      <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center" title="Officer">
                        <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                      </div>
                    <% else %>
                      <!-- Citizen Icon -->
                      <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center" title="Citizen">
                        <svg class="h-6 w-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                      </div>
                    <% end %>
                  </div>

                  <!-- Comment Content -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-2">
                        <p class="text-sm font-medium text-gray-900"><%= comment.user.email.split('@').first %></p>
                        <% if comment.user.officer_user_type? %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                            Officer
                          </span>
                        <% end %>
                      </div>
                      <div class="flex items-center space-x-2">
                        <span class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</span>
                        <% if user_signed_in? && (comment.user == current_user || current_user.officer_user_type?) %>
                          <%= button_to issue_comment_path(@issue, comment),
                              method: :delete,
                              data: { turbo_confirm: "Are you sure you want to delete this comment?" },
                              class: "text-red-600 hover:text-red-800" do %>
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                    <p class="mt-2 text-sm text-gray-700 whitespace-pre-wrap"><%= comment.body %></p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-center py-8">No comments yet. Be the first to comment!</p>
          <% end %>

          <!-- Comment Form -->
          <% if user_signed_in? %>
            <% if @issue.closed_status? %>
              <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 text-center">
                <p class="text-sm text-yellow-800">
                  <svg class="inline-block h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                  This issue is closed. Comments are not allowed on closed issues.
                </p>
              </div>
            <% else %>
              <div class="border-t border-gray-200 pt-6">
                <%= form_with(model: [@issue, Comment.new], local: true, class: "space-y-4") do |form| %>
                  <div>
                    <%= form.label :body, "Add a comment", class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= form.text_area :body,
                        rows: 3,
                        placeholder: "Share updates, ask questions, or provide additional information...",
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500" %>
                  </div>
                  <div class="flex justify-end gap-3">
                    <%= form.submit "Post Comment",
                        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>

                    <% if current_user.officer_user_type? && !@issue.closed_status? %>
                      <%= form.submit "Post Comment and Close",
                          name: "close_issue",
                          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="border-t border-gray-200 pt-6 text-center">
              <p class="text-gray-500">
                <%= link_to "Sign in", new_user_session_path, class: "text-red-600 hover:text-red-700 font-medium" %> to leave a comment
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Navigation Footer -->
    <div class="mt-8 flex justify-between">
      <%= link_to issues_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700" do %>
        <svg class="mr-2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to All Issues
      <% end %>

      <%= link_to "Report Another Issue", new_issue_path, class: "inline-flex items-center text-sm font-medium text-red-600 hover:text-red-700" %>
    </div>
  </div>
</div>